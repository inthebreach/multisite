# Wordpress - ignore core, configuration, examples, uploads, and logs.
# https://github.com/github/gitignore/blob/main/WordPress.gitignore

# Core WordPress files
/wp-admin/
/wp-content/index.php
/wp-content/languages/
/wp-content/plugins/index.php
/wp-content/themes/index.php
/wp-includes/
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php

# Configuration - ignore wp-config.php and .env files
wp-config.php
.env
.env.local
/.env.*

# Example themes and plugins
/wp-content/themes/twenty*/
/wp-content/plugins/hello.php

# Uploads and media files
/wp-content/uploads/

# Log files
*.log
debug.log

# Ignore temporary and cache files
/wp-content/cache/
/wp-content/backups/

# Ignore htaccess
/.htaccess

# Ignore local development files (Gitpod, Docker, etc.)
.gitpod/
.idea/
.vscode/
*.local
.DS_Store

# Ignore database backup files
*.sql
*.sql.gz
*.tar.gz
*.zip
*.bak
*.backup

# Ignore all plugins and themes
#
# Note: If you wish to whitelist plugins or themes, uncomment the lines below
/wp-content/plugins/
/wp-content/themes/

# Ignore node_modules (if using node for scripts)
node_modules/

# Ignore Composer dependencies (if applicable)
vendor/

# Ignore any Prime Mover backup or migration files
*.pmu
